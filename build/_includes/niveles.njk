<div class="container">
    <div class="topics-panel" id="topicsPanel" style="margin-bottom: 30px; background: white; box-shadow: 0 4px 15px rgba(0,0,0,0.1); border-radius: 12px; overflow: hidden; border: 1px solid #e2e8f0;">
        <div class="panel-header" style="background: #6366f1; padding: 15px 20px; color: white; display: flex; align-items: center; justify-content: space-between; cursor: pointer;">
            <h3 style="margin: 0; font-size: 1.1rem; display: flex; align-items: center; gap: 10px;">
                <i class="fas fa-search"></i>
                Buscar Temas
            </h3>
            <button class="panel-toggle" id="panelToggle" aria-label="Alternar panel" style="background: none; border: none; color: white; font-size: 1.2rem; cursor: pointer; padding: 5px;">
                <i class="fas fa-chevron-down"></i>
            </button>
        </div>
        <div class="panel-content" id="panelContent" style="background: white; padding: 20px;">
            <div class="search-box" style="position: relative; width: 100%;">
                <i class="fas fa-search" style="position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: #94a3b8;"></i>
                <input type="text" id="topicSearch" placeholder="Buscar por tema..." autocomplete="off" 
                       style="width: 100%; padding: 12px 15px 12px 45px; border-radius: 8px; border: 2px solid #e2e8f0; font-size: 1rem; transition: all 0.3s ease;"
                       onclick="event.stopPropagation()" onkeydown="event.stopPropagation()">
            </div>
        </div>
    </div>

    {{ content | safe }}

    <!-- INLINE LESSON EDITOR -->
    <div id="inlineEditorContainer" style="display: none; margin: 40px 0; padding: 30px; background: #f8fafc; border-radius: 15px; border: 2px solid #6366f1;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px;">
            <h2 style="color: #6366f1; margin: 0; display: flex; align-items: center; gap: 10px;">
                <i class="fas fa-edit"></i>
                Editar Lección
            </h2>
            <button id="cancelEditBtn" class="btn btn-secondary" style="display: flex; align-items: center; gap: 8px;">
                <i class="fas fa-times"></i>
                Cancelar
            </button>
        </div>

        <form id="inlineLessonForm">
            <div style="margin-bottom: 20px;">
                <label for="inlineLessonTitle" style="display: block; margin-bottom: 8px; font-weight: 600; color: #475569;">
                    Título de la Lección
                </label>
                <input type="text" id="inlineLessonTitle" required 
                       style="width: 100%; padding: 12px; border-radius: 8px; border: 2px solid #e2e8f0; font-size: 1rem;">
            </div>

            <input type="hidden" id="inlineLessonId">

            <div style="margin-bottom: 20px;">
                <label for="inlineLessonDescription" style="display: block; margin-bottom: 8px; font-weight: 600; color: #475569;">
                    Descripción (opcional)
                </label>
                <textarea id="inlineLessonDescription" rows="2" 
                          style="width: 100%; padding: 12px; border-radius: 8px; border: 2px solid #e2e8f0; font-size: 1rem; resize: vertical;"></textarea>
            </div>

            <div style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #475569;">
                    Contenido de la Lección
                </label>
                <div id="inlineLessonContentEditor" style="min-height: 300px; background: white; border-radius: 8px; border: 2px solid #e2e8f0;"></div>
            </div>

            <div style="display: flex; gap: 15px; justify-content: flex-end;">
                <button type="button" id="cancelEditBtn2" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary" style="display: flex; align-items: center; gap: 8px;">
                    <i class="fas fa-paper-plane"></i>
                    Enviar Propuesta de Edición
                </button>
            </div>
        </form>
    </div>

    <div class="level-actions" style="margin-top: 60px; margin-bottom: 60px; text-align: center; padding: 20px; background: #f8fafc; border-radius: 15px; border: 1px solid #e2e8f0;">
        <h3 style="margin-bottom: 15px; color: #475569; font-size: 1.1rem;">¿Quieres contribuir?</h3>
        <a href="/Contribute.html" class="btn btn-primary" style="display: inline-flex; align-items: center; gap: 10px; padding: 12px 30px; border-radius: 50px; font-weight: 600; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
            <i class="fas fa-plus"></i>
            Crear Nueva Lección
        </a>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const panel = document.getElementById('topicsPanel');
        const panelToggle = document.getElementById('panelToggle');
        const panelHeader = document.querySelector('.panel-header');
        const searchInput = document.getElementById('topicSearch');
        const searchBox = document.querySelector('.search-box');
        
        // Function to stop propagation
        function stop(e) { e.stopPropagation(); }
        
        // Prevent search input from closing the panel
        if (searchInput) {
            searchInput.addEventListener('click', stop);
            searchInput.addEventListener('mousedown', stop);
            searchInput.addEventListener('touchstart', stop);
            searchInput.addEventListener('keydown', stop);
        }
        if (searchBox) {
            searchBox.addEventListener('click', stop);
            searchBox.addEventListener('mousedown', stop);
            searchBox.addEventListener('touchstart', stop);
        }

        // Toggle Logic
        function togglePanel(e) {
            if (e) {
                e.preventDefault();
                e.stopPropagation();
            }
            if (panel) {
                panel.classList.toggle('collapsed');
            }
        }

        if (panelToggle) {
            panelToggle.addEventListener('click', togglePanel);
        }

        if (panelHeader) {
            panelHeader.addEventListener('click', function(e) {
                // Only toggle if the click wasn't on the toggle button (handled above)
                // or the search input (handled by stop propagation)
                if (!e.target.closest('.panel-toggle') && !e.target.closest('.search-box')) {
                    togglePanel(e);
                }
            });
        }
    });
</script>

